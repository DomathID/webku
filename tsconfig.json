{
  "compilerOptions": {
    "target": "es5",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "removeComments": true,
    "sourceMap": true,
    "baseUrl": "./",
    "paths": {
      "@framework/*": ["src/SDKv4/Framework/src/*"]
    }
  },
  "include": [
    "src/SDKv4/**/*.ts",
    "src/SDKv4/*.ts"
  ],
  "exclude": [
    "node_modules",
    "./dist"
  ]
}

